<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="lovstad.dk.kemiapp.BeregnerMenu"
    android:background="#cdcbc6">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stofmængdeberegner"
        android:id="@+id/buttonStofmængdeberegner"
        android:layout_alignParentTop="true"
        android:layout_marginTop="61dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Molarmasse"
        android:id="@+id/buttonMolarmasse"
        android:layout_below="@+id/buttonStofmængdeberegner"
        android:layout_alignRight="@+id/buttonStofmængdeberegner"
        android:layout_alignEnd="@+id/buttonStofmængdeberegner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonTitreringsberegner"
        android:layout_below="@+id/buttonMolarmasse"
        android:layout_alignRight="@+id/buttonMolarmasse"
        android:layout_alignEnd="@+id/buttonMolarmasse"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Titreringsberegner" />
</RelativeLayout>
